generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String         @id @default(cuid())
  email                  String         @unique
  name                   String
  password               String
  role                   Role           @default(PATIENT)
  imageUrl               String?
  phone                  String?
  birthDate              DateTime?
  gender                 String?
  insurance              String?
  insuranceNumber        String?
  specialty              String[]
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  appointmentsAsDoctor   Appointment[]  @relation("DoctorAppointments")
  appointmentsAsPatient  Appointment[]  @relation("PatientAppointments")
  prescriptionsAsDoctor  Prescription[] @relation("DoctorPrescriptions")
  prescriptionsAsPatient Prescription[] @relation("PatientPrescriptions")
}

model Appointment {
  id            String         @id @default(cuid())
  date          DateTime
  specialty     String
  doctorId      String
  patientId     String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  doctor        User           @relation("DoctorAppointments", fields: [doctorId], references: [id])
  patient       User           @relation("PatientAppointments", fields: [patientId], references: [id])
  prescriptions Prescription[]
}

model Prescription {
  id            String      @id @default(cuid())
  farmaco       String
  dose          String
  frequencia    String
  observacoes   String?
  doctorId      String
  patientId     String
  appointmentId String
  criadoEm      DateTime    @default(now())
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  doctor        User        @relation("DoctorPrescriptions", fields: [doctorId], references: [id])
  patient       User        @relation("PatientPrescriptions", fields: [patientId], references: [id])
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}
